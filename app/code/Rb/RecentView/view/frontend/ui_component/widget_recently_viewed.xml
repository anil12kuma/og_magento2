<?xml version="1.0" encoding="UTF-8"?>
<listing xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Ui:etc/ui_configuration.xsd">
    <columns name="widget_columns">
        <column name="learn-more" component="Magento_Catalog/js/product/learn-more" displayArea="description-area">
            <settings>
                <label translate="true">More Details</label>
                <bodyTmpl>Magento_Catalog/product/link</bodyTmpl>
            </settings>
        </column>
           <column name="addtowishlist-button" component="Magento_Wishlist/js/product/addtowishlist-button" sortOrder="2" displayArea="details-area">
            <settings>
                <label translate="true">Add To Wishlist</label>
                <bodyTmpl>Magento_Wishlist/product/addtowishlist-button</bodyTmpl>
            </settings>
        </column>
        <column name="brand" component="Rb_RecentView/js/product/brand" displayArea="details-area" sortOrder='1'>
            <settings>
                <label translate="true">Brand</label>
                <bodyTmpl>Rb_RecentView/product/brand</bodyTmpl>
            </settings>
        </column>
    </columns>
</listing>