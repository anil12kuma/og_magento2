<page xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_configuration.xsd">
    <update handle="customer_account"/>
    <body>
        <move element="page.main.title" destination="columns" before="-" />
        <move element="order-extra-text" destination="columns" after="page.main.title" />
        <referenceContainer name="content">
           <block class="Magento\Cms\Block\Block" name="order-extra-text">
                <arguments>
                  <argument name="block_id" xsi:type="string">order-extra-info</argument>
                </arguments>
              </block>
        </referenceContainer>
    </body>
</page>
