<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/layout_generic.xsd">
    <container name="root">
        <block class="Magento\Framework\View\Element\Template" name="timber.login.register.section" template="Tigren_Ajaxlogin::login-tab.phtml">
            <block class="Tigren\Ajaxlogin\Block\Form\Login" as="ajaxlogin_login_popup"
                template="Tigren_Ajaxlogin::ajaxlogin/login.phtml">
                <container name="form.additional.info" as="form_additional_info"/>
            </block>
            <block class="Tigren\Ajaxlogin\Block\Form\Register" as="ajaxlogin_register_popup"
                template="Tigren_Ajaxlogin::ajaxlogin/register.phtml">
                <container name="form.additional.info" as="form_additional_info"/>
            </block>
        </block>
    </container>
</layout>
